{
  "name": "express-mongoose-es6-rest-api",
  "version": "2.0.0",
  "description": "A Boilerplate application for building REST APIs using express, mongoose in ES6 with code coverage",
  "author": "Kunal Kapadia <kunalkapadia12@gmail.com>",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=8.9",
    "npm": ">=5.5.0",
    "yarn": ">=1.0.0"
  },
  "scripts": {
    "start": "nodemon --ignore lib --exec babel-node index.js",
    "start:debug": "cross-env DEBUG=express-mongoose-es6-rest-api:* yarn start",
    "prod:build": "rimraf lib && babel . -d lib --ignore .test.js,node_modules",
    "prod:start": "node lib/index.js",
    "lint": "esw *.js server config --color",
    "lint:watch": "yarn lint -- --watch",
    "precommit": "yarn lint && yarn test",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
    "test:watch": "yarn test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
    "test:check-coverage": "yarn test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:KunalKapadia/express-mongoose-es6-rest-api.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "es6",
    "mocha",
    "istanbul",
    "REST",
    "API",
    "boilerplate"
  ],
  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "8.2.1",
    "babel-preset-env": "1.6.1",
    "bluebird": "3.5.1",
    "body-parser": "1.18.2",
    "compression": "1.7.1",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "debug": "^2.4.5",
    "dotenv": "^4.0.0",
    "express": "4.16.2",
    "express-jwt": "5.1.0",
    "express-validation": "1.0.2",
    "express-winston": "2.4.0",
    "helmet": "3.10.0",
    "http-status": "^1.0.1",
    "joi": "13.0.2",
    "jsonwebtoken": "8.1.0",
    "method-override": "^2.3.10",
    "mongoose": "4.7.4",
    "morgan": "1.9.0",
    "rimraf": "2.6.2",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "commitizen": "^2.9.2",
    "coveralls": "^2.11.6",
    "cross-env": "3.1.3",
    "cz-conventional-changelog": "1.2.0",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "~2.8.0",
    "eslint-watch": "3.1.3",
    "husky": "^0.13.1",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "3.2.0",
    "nodemon": "1.17.1",
    "supertest": "3.0.0",
    "validate-commit-msg": "^2.6.1"
  },
  "optionalDependencies": {
    "fsevents": "*"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
